@model IEnumerable<SistemaOrdemPedidos.Models.Cliente>

@{
    ViewBag.Title = "Lista Clientes";
}

<h2>Lista de Clientes</h2>

<p>
    @Html.ActionLink("Cadastrar Cliente", "Create")
</p>

<table id="tableClient" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClienteId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ClienteId }) 
        </td>
    </tr>
}

</table>

<script>
$(document).ready(function(){
    $('#tableClient').dataTable();
});
</script>
