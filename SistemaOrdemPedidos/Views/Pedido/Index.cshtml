@model IEnumerable<SistemaOrdemPedidos.Models.Pedido>

@{
    ViewBag.Title = "Pedidos Ativos";
}

<h2>Pedidos Ativos</h2>

<p>
    @Html.ActionLink("Novo Pedido", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Número do Pedido")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PedidoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PedidoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.PedidoId }) |
            @Html.ActionLink("Fechar", "Delete", new { id=item.PedidoId })
        </td>
    </tr>
}

</table>
