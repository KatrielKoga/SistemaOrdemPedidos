@model IEnumerable<SistemaOrdemPedidos.Models.ItemPedido>

@{
    ViewBag.Title = "Pedido";
}

<h2>Dados do Pedido</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Número do Pedido")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pedido.PedidoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produto.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ItemPedidoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ItemPedidoId }) |
